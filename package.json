{
  "name": "PepperoniApiTemplate",
  "author": "Futurice",
  "description": "Node Api Starter Kit for Backend",
  "license": "MIT",
  "homepage": "http://getpepperoni.com",
  "bugs": "https://github.com/futurice/pepperoni-api-kit/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futurice/pepperoni-api-kit.git"
  },
  "engines": {
    "node": "6.2.0"
  },
  "keywords": [
    "Node",
    "Postgres",
    "Auth0",
    "Knex",
    "Jest"
  ],
  "scripts": {
    "start": "npm run build && node dist/pepperoni-backend.js",
    "postinstall": "npm run build",
    "build": "mkdir -p dist && babel src --out-dir dist --source-maps",
    "watch": "NODE_ENV=development nodemon --exec babel-node src/pepperoni-backend.js",
    "register:admin": "babel-node register_admin.js",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:init": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback"
  },
  "version": "0.0.1",
  "main": "src/server.js",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "bcrypt": "^0.8.7",
    "bluebird": "^3.4.1",
    "boom": "^3.2.2",
    "dotenv": "^2.0.0",
    "fixture-factory": "^1.5.1",
    "fs-sync": "^1.0.2",
    "glue": "^4.1.0",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "good-squeeze": "^4.0.0",
    "hapi": "^16.1.0",
    "hapi-auth-jwt2": "^7.0.1",
    "hapi-routes": "^2.2.3",
    "hoek": "^4.1.0",
    "jimp": "^0.2.27",
    "joi": "^10.2.2",
    "jsonwebtoken": "^7.3.0",
    "knex": "^0.11.5",
    "lodash": "^4.13.1",
    "mkdirp": "^0.5.1",
    "node-uuid": "^1.4.7",
    "pg": "^5.0.0",
    "prompt": "^1.0.0",
    "white-out": "^2.0.0"
  },
  "devDependencies": {
    "babel-jest": "^16.0.0",
    "babel-polyfill": "^6.16.0",
    "chokidar-cli": "^1.2.0",
    "code": "^3.0.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "jest": "^16.0.2",
    "lab": "^10.8.2",
    "lab-babel": "^1.1.1",
    "mock-knex": "^0.3.7",
    "nodemon": "^1.9.2"
  }
}
